    "module": "es2015",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"es2016",
			"dom"
		]
  },
  "include": [
    "src"
  ],
  "angularCompilerOptions": {
    "genDir": "./src/ngfactory",
    "entryModule": "./src/app/app.module#AppModule"
  }
}
